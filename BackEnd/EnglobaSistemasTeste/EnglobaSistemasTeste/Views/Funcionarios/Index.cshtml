@model IEnumerable<EnglobaSistemasTeste.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastre Um Funcionario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrgaoEmissor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TituloEleitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gestor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrgaoEmissor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TituloEleitor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gestor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFuncionario">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFuncionario">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFuncionario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
